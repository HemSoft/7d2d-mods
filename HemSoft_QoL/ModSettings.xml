<?xml version="1.0" encoding="UTF-8"?>
<!--
  HemSoft QoL - Gears Mod Settings
  
  This file integrates with the Gears mod settings framework to provide
  an in-game UI for configuring HemSoft QoL settings.
  
  Requires: Gears mod (https://github.com/s7092910/Gears)
-->
<ModSettings>
  <Global>
    <!-- Inventory Hotkeys Tab -->
    <Tab name="Hotkeys">
      
      <!-- Quick Stack Settings -->
      <Category name="QuickStack" displayKey="hemsoftqol_cat_quickstack" tooltipKey="hemsoftqol_cat_quickstack_tt">
        <Switch name="QuickStackEnabled" displayKey="hemsoftqol_enabled" tooltipKey="hemsoftqol_enabled_tt"
                value="On" defaultValue="On" leftValue="Off" rightValue="On" />
        <Selector name="QuickStackModifier" displayKey="hemsoftqol_modifier" tooltipKey="hemsoftqol_modifier_tt"
                  value="None" defaultValue="None" wrap="true">
          <Property type="arrayValues" allowedValues="None,LeftAlt,RightAlt,LeftControl,RightControl,LeftShift,RightShift" />
        </Selector>
        <Selector name="QuickStackKey" displayKey="hemsoftqol_key" tooltipKey="hemsoftqol_key_tt"
                  value="Q" defaultValue="Q" wrap="true">
          <Property type="arrayValues" allowedValues="Q,E,F,G,H,J,K,L,Z,X,C,V,B,N,M,Alpha1,Alpha2,Alpha3,Alpha4,Alpha5,Alpha6,Alpha7,Alpha8,Alpha9,Alpha0,F1,F2,F3,F4,F5,F6,F7,F8,F9,F10,F11,F12" />
        </Selector>
      </Category>
      
      <!-- Stash All Settings -->
      <Category name="StashAll" displayKey="hemsoftqol_cat_stashall" tooltipKey="hemsoftqol_cat_stashall_tt">
        <Switch name="StashAllEnabled" displayKey="hemsoftqol_enabled" tooltipKey="hemsoftqol_enabled_tt"
                value="On" defaultValue="On" leftValue="Off" rightValue="On" />
        <Selector name="StashAllModifier" displayKey="hemsoftqol_modifier" tooltipKey="hemsoftqol_modifier_tt"
                  value="LeftAlt" defaultValue="LeftAlt" wrap="true">
          <Property type="arrayValues" allowedValues="None,LeftAlt,RightAlt,LeftControl,RightControl,LeftShift,RightShift" />
        </Selector>
        <Selector name="StashAllKey" displayKey="hemsoftqol_key" tooltipKey="hemsoftqol_key_tt"
                  value="X" defaultValue="X" wrap="true">
          <Property type="arrayValues" allowedValues="Q,E,F,G,H,J,K,L,Z,X,C,V,B,N,M,Alpha1,Alpha2,Alpha3,Alpha4,Alpha5,Alpha6,Alpha7,Alpha8,Alpha9,Alpha0,F1,F2,F3,F4,F5,F6,F7,F8,F9,F10,F11,F12" />
        </Selector>
      </Category>
      
      <!-- Restock Settings -->
      <Category name="Restock" displayKey="hemsoftqol_cat_restock" tooltipKey="hemsoftqol_cat_restock_tt">
        <Switch name="RestockEnabled" displayKey="hemsoftqol_enabled" tooltipKey="hemsoftqol_enabled_tt"
                value="On" defaultValue="On" leftValue="Off" rightValue="On" />
        <Selector name="RestockModifier" displayKey="hemsoftqol_modifier" tooltipKey="hemsoftqol_modifier_tt"
                  value="LeftAlt" defaultValue="LeftAlt" wrap="true">
          <Property type="arrayValues" allowedValues="None,LeftAlt,RightAlt,LeftControl,RightControl,LeftShift,RightShift" />
        </Selector>
        <Selector name="RestockKey" displayKey="hemsoftqol_key" tooltipKey="hemsoftqol_key_tt"
                  value="R" defaultValue="R" wrap="true">
          <Property type="arrayValues" allowedValues="Q,E,F,G,H,J,K,L,Z,X,C,V,B,N,M,Alpha1,Alpha2,Alpha3,Alpha4,Alpha5,Alpha6,Alpha7,Alpha8,Alpha9,Alpha0,F1,F2,F3,F4,F5,F6,F7,F8,F9,F10,F11,F12" />
        </Selector>
      </Category>
      
      <!-- Sort Container Settings -->
      <Category name="SortContainer" displayKey="hemsoftqol_cat_sortcontainer" tooltipKey="hemsoftqol_cat_sortcontainer_tt">
        <Switch name="SortContainerEnabled" displayKey="hemsoftqol_enabled" tooltipKey="hemsoftqol_enabled_tt"
                value="On" defaultValue="On" leftValue="Off" rightValue="On" />
        <Selector name="SortContainerModifier" displayKey="hemsoftqol_modifier" tooltipKey="hemsoftqol_modifier_tt"
                  value="None" defaultValue="None" wrap="true">
          <Property type="arrayValues" allowedValues="None,LeftAlt,RightAlt,LeftControl,RightControl,LeftShift,RightShift" />
        </Selector>
        <Selector name="SortContainerKey" displayKey="hemsoftqol_key" tooltipKey="hemsoftqol_key_tt"
                  value="S" defaultValue="S" wrap="true">
          <Property type="arrayValues" allowedValues="Q,E,F,G,H,J,K,L,Z,X,C,V,B,N,M,Alpha1,Alpha2,Alpha3,Alpha4,Alpha5,Alpha6,Alpha7,Alpha8,Alpha9,Alpha0,F1,F2,F3,F4,F5,F6,F7,F8,F9,F10,F11,F12" />
        </Selector>
      </Category>
      
      <!-- Sort Inventory Settings -->
      <Category name="SortInventory" displayKey="hemsoftqol_cat_sortinventory" tooltipKey="hemsoftqol_cat_sortinventory_tt">
        <Switch name="SortInventoryEnabled" displayKey="hemsoftqol_enabled" tooltipKey="hemsoftqol_enabled_tt"
                value="Off" defaultValue="Off" leftValue="Off" rightValue="On" />
        <Selector name="SortInventoryModifier" displayKey="hemsoftqol_modifier" tooltipKey="hemsoftqol_modifier_tt"
                  value="LeftAlt" defaultValue="LeftAlt" wrap="true">
          <Property type="arrayValues" allowedValues="None,LeftAlt,RightAlt,LeftControl,RightControl,LeftShift,RightShift" />
        </Selector>
        <Selector name="SortInventoryKey" displayKey="hemsoftqol_key" tooltipKey="hemsoftqol_key_tt"
                  value="M" defaultValue="M" wrap="true">
          <Property type="arrayValues" allowedValues="Q,E,F,G,H,J,K,L,Z,X,C,V,B,N,M,Alpha1,Alpha2,Alpha3,Alpha4,Alpha5,Alpha6,Alpha7,Alpha8,Alpha9,Alpha0,F1,F2,F3,F4,F5,F6,F7,F8,F9,F10,F11,F12" />
        </Selector>
      </Category>
      
    </Tab>
    
    <!-- Info Panel Tab -->
    <Tab name="Info Panel">
      
      <Category name="PanelElements" displayKey="hemsoftqol_cat_elements" tooltipKey="hemsoftqol_cat_elements_tt">
        <Switch name="ShowLevel" displayKey="hemsoftqol_show_level" tooltipKey="hemsoftqol_show_level_tt"
                value="Show" defaultValue="Show" leftValue="Hide" rightValue="Show" />
        <Switch name="ShowGamestage" displayKey="hemsoftqol_show_gamestage" tooltipKey="hemsoftqol_show_gamestage_tt"
                value="Show" defaultValue="Show" leftValue="Hide" rightValue="Show" />
        <Switch name="ShowLootstage" displayKey="hemsoftqol_show_lootstage" tooltipKey="hemsoftqol_show_lootstage_tt"
                value="Show" defaultValue="Show" leftValue="Hide" rightValue="Show" />
        <Switch name="ShowDay" displayKey="hemsoftqol_show_day" tooltipKey="hemsoftqol_show_day_tt"
                value="Show" defaultValue="Show" leftValue="Hide" rightValue="Show" />
        <Switch name="ShowBloodMoon" displayKey="hemsoftqol_show_bloodmoon" tooltipKey="hemsoftqol_show_bloodmoon_tt"
                value="Show" defaultValue="Show" leftValue="Hide" rightValue="Show" />
        <Switch name="ShowKills" displayKey="hemsoftqol_show_kills" tooltipKey="hemsoftqol_show_kills_tt"
                value="Show" defaultValue="Show" leftValue="Hide" rightValue="Show" />
        <Switch name="ShowNearestEnemy" displayKey="hemsoftqol_show_enemy" tooltipKey="hemsoftqol_show_enemy_tt"
                value="Show" defaultValue="Show" leftValue="Hide" rightValue="Show" />
        <Switch name="ShowBiome" displayKey="hemsoftqol_show_biome" tooltipKey="hemsoftqol_show_biome_tt"
                value="Hide" defaultValue="Hide" leftValue="Hide" rightValue="Show" />
        <Switch name="ShowPOI" displayKey="hemsoftqol_show_poi" tooltipKey="hemsoftqol_show_poi_tt"
                value="Show" defaultValue="Show" leftValue="Hide" rightValue="Show" />
        <Switch name="ShowCoords" displayKey="hemsoftqol_show_coords" tooltipKey="hemsoftqol_show_coords_tt"
                value="Hide" defaultValue="Hide" leftValue="Hide" rightValue="Show" />
        <Switch name="ShowSession" displayKey="hemsoftqol_show_session" tooltipKey="hemsoftqol_show_session_tt"
                value="Show" defaultValue="Show" leftValue="Hide" rightValue="Show" />
        <Switch name="ShowLootstagePopup" displayKey="hemsoftqol_show_lootpopup" tooltipKey="hemsoftqol_show_lootpopup_tt"
                value="Show" defaultValue="Show" leftValue="Hide" rightValue="Show" />
      </Category>
      
      <Category name="PanelSettings" displayKey="hemsoftqol_cat_panelsettings" tooltipKey="hemsoftqol_cat_panelsettings_tt">
        <Selector name="PanelWidth" displayKey="hemsoftqol_panel_width" tooltipKey="hemsoftqol_panel_width_tt"
                  value="140" defaultValue="140" wrap="true">
          <Property type="arrayValues" allowedValues="100,110,120,130,140,150,160,170,180,190,200,220,240,260,280,300" />
        </Selector>
      </Category>
      
      <Category name="LootstageNotification" displayKey="hemsoftqol_cat_lootnotif" tooltipKey="hemsoftqol_cat_lootnotif_tt">
        <Selector name="NotificationX" displayKey="hemsoftqol_notif_x" tooltipKey="hemsoftqol_notif_x_tt"
                  value="960" defaultValue="960" wrap="true">
          <Property type="arrayValues" allowedValues="0,50,100,150,200,250,300,350,400,450,500,550,600,650,700,750,800,850,900,950,1000,1050,1100,1150,1200,1250,1300,1350,1400,1450,1500,1550,1600,1650,1700,1750,1800,1850,1900,1950,2000,2100,2200,2300,2400,2500,2600,2700,2800,2900,3000,3200,3440" />
        </Selector>
        <Selector name="NotificationY" displayKey="hemsoftqol_notif_y" tooltipKey="hemsoftqol_notif_y_tt"
                  value="650" defaultValue="650" wrap="true">
          <Property type="arrayValues" allowedValues="0,50,100,150,200,300,400,500,600,650,700,800,900,1000,1100,1200,1300,1440" />
        </Selector>
        <Selector name="NotificationWidth" displayKey="hemsoftqol_notif_width" tooltipKey="hemsoftqol_notif_width_tt"
                  value="800" defaultValue="800" wrap="true">
          <Property type="arrayValues" allowedValues="400,500,600,700,800,900,1000,1100,1200" />
        </Selector>
        <Selector name="NotificationTitleFontSize" displayKey="hemsoftqol_notif_titlefont" tooltipKey="hemsoftqol_notif_titlefont_tt"
                  value="36" defaultValue="36" wrap="true">
          <Property type="arrayValues" allowedValues="18,20,22,24,26,28,30,32,34,36,38,40,44,48,52,56,60,64,68,72" />
        </Selector>
        <Selector name="NotificationValueFontSize" displayKey="hemsoftqol_notif_valuefont" tooltipKey="hemsoftqol_notif_valuefont_tt"
                  value="32" defaultValue="32" wrap="true">
          <Property type="arrayValues" allowedValues="16,18,20,22,24,26,28,30,32,34,36,40,44,48,52,56,60,64" />
        </Selector>
      </Category>
      
    </Tab>
    
  </Global>
</ModSettings>
