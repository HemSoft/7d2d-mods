<?xml version="1.0" encoding="UTF-8"?>
<!--
  HemSoft QoL Configuration
  
  Modifier keys: None, LeftAlt, RightAlt, LeftControl, RightControl, LeftShift, RightShift
  Key codes: https://docs.unity3d.com/ScriptReference/KeyCode.html
  
  Set enabled="false" to disable a hotkey.
-->
<HemSoftQoL>
  <Hotkeys>
    <!-- Quick Stack: Deposit items that match existing stacks in the open container -->
    <QuickStack enabled="true" modifier="None" key="Q" />
    
    <!-- Stash All: Deposit all non-locked inventory items into the open container -->
    <StashAll enabled="true" modifier="LeftAlt" key="X" />
    
    <!-- Restock: Pull items from container to fill existing stacks in your inventory -->
    <Restock enabled="true" modifier="LeftAlt" key="R" />
    
    <!-- Sort Container: Sort items in the open container alphabetically -->
    <SortContainer enabled="true" modifier="None" key="S" />
    
    <!-- Sort Inventory: Sort items in your backpack alphabetically (disabled by default) -->
    <SortInventory enabled="false" modifier="LeftAlt" key="M" />
  </Hotkeys>
</HemSoftQoL>
