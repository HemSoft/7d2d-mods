<?xml version="1.0" encoding="UTF-8"?>
<!-- HemSoft QoL - Custom HUD Info Panel -->
<!-- Use console commands to configure: hs level, hs gamestage, etc. -->
<!-- Supports both vanilla and RW_SimpleUI HUDs -->
<configs>
    <!-- Append our info panel to the HUD window (vanilla OR RW_SimpleUI) -->
    <append xpath="/windows/window[@name='HUDLeftStatBars' or @name='RWSUI_LeftHUD']">
        <!-- Info Panel - positioned to the right of the stat bars -->
        <rect name="hemsoft_info_panel" controller="XUiC_HemSoftInfoPanel, HemSoft_QoL"
              pos="190,170" width="140" height="190">
            
            <!-- Solid dark background with visible border -->
            <sprite depth="1" name="background" sprite="ui_game_panel_background" 
                    color="20,20,25,230" pos="0,0" width="140" height="190" />
            <sprite depth="2" name="border" sprite="ui_game_panel_header" 
                    color="80,80,90,255" pos="0,0" width="140" height="190" />
            
            <!-- Title bar -->
            <sprite depth="3" name="titlebar" sprite="menu_empty" 
                    color="50,50,60,255" pos="2,-2" width="136" height="22" />
            <label depth="4" pos="5,-4" width="130" height="20" 
                   font_size="16" color="255,255,255,255" text="Player Info" 
                   justify="center" font="ReferenceFont" />
            
            <!-- Level Row -->
            <rect name="levelRow" pos="0,-28" width="140" height="20" visible="{showlevel}">
                <label depth="4" pos="8,0" width="60" height="20" 
                       font_size="14" color="180,180,180,255" text="Level" />
                <label depth="4" name="levelValue" pos="70,0" width="62" height="20" 
                       font_size="16" color="100,255,100,255" text="{playerlevel}" 
                       justify="right" font="ReferenceFont" />
            </rect>
            
            <!-- Gamestage Row -->
            <rect name="gamestageRow" pos="0,-48" width="140" height="20" visible="{showgamestage}">
                <label depth="4" pos="8,0" width="70" height="20" 
                       font_size="14" color="180,180,180,255" text="Gamestage" />
                <label depth="4" name="gamestageValue" pos="80,0" width="52" height="20" 
                       font_size="16" color="255,220,100,255" text="{gamestage}" 
                       justify="right" font="ReferenceFont" />
            </rect>
            
            <!-- Lootstage Row -->
            <rect name="lootstageRow" pos="0,-68" width="140" height="20" visible="{showlootstage}">
                <label depth="4" pos="8,0" width="70" height="20" 
                       font_size="14" color="180,180,180,255" text="Lootstage" />
                <label depth="4" name="lootstageValue" pos="80,0" width="52" height="20" 
                       font_size="16" color="255,180,50,255" text="{lootstage}" 
                       justify="right" font="ReferenceFont" />
            </rect>
            
            <!-- Day Row -->
            <rect name="dayRow" pos="0,-88" width="140" height="20" visible="{showday}">
                <label depth="4" pos="8,0" width="60" height="20" 
                       font_size="14" color="180,180,180,255" text="Day" />
                <label depth="4" name="dayValue" pos="70,0" width="62" height="20" 
                       font_size="16" color="100,200,255,255" text="{currentday}" 
                       justify="right" font="ReferenceFont" />
            </rect>
            
            <!-- Blood Moon Row -->
            <rect name="bloodmoonRow" pos="0,-108" width="140" height="20" visible="{showbloodmoon}">
                <label depth="4" pos="8,0" width="75" height="20" 
                       font_size="14" color="180,180,180,255" text="Blood Moon" />
                <label depth="4" name="bloodmoonValue" pos="85,0" width="47" height="20" 
                       font_size="16" color="{bloodmooncolor}" text="{bloodmoontext}" 
                       justify="right" font="ReferenceFont" />
            </rect>
            
            <!-- Kills Row -->
            <rect name="killsRow" pos="0,-128" width="140" height="20" visible="{showkills}">
                <label depth="4" pos="8,0" width="60" height="20" 
                       font_size="14" color="180,180,180,255" text="Kills" />
                <label depth="4" name="killsValue" pos="70,0" width="62" height="20" 
                       font_size="16" color="255,100,100,255" text="{zombiekills}" 
                       justify="right" font="ReferenceFont" />
            </rect>
            
            <!-- Nearest Enemy Row -->
            <rect name="enemyRow" pos="0,-148" width="140" height="20" visible="{shownearestenemy}">
                <label depth="4" pos="8,0" width="60" height="20" 
                       font_size="14" color="180,180,180,255" text="Nearest" />
                <label depth="4" name="enemyValue" pos="70,0" width="62" height="20" 
                       font_size="16" color="{nearestenemycolor}" text="{nearestenemy}" 
                       justify="right" font="ReferenceFont" />
            </rect>
            
            <!-- Enemy Count Row -->
            <rect name="enemyCountRow" pos="0,-168" width="140" height="20" visible="{shownearestenemy}">
                <label depth="4" pos="8,0" width="60" height="20" 
                       font_size="14" color="180,180,180,255" text="Enemies" />
                <label depth="4" name="enemyCountValue" pos="70,0" width="62" height="20" 
                       font_size="16" color="{enemycountcolor}" text="{enemycount}" 
                       justify="right" font="ReferenceFont" />
            </rect>
            
            <!-- Biome Row -->
            <rect name="biomeRow" pos="0,-188" width="140" height="20" visible="{showbiome}">
                <label depth="4" pos="8,0" width="60" height="20" 
                       font_size="14" color="180,180,180,255" text="Biome" />
                <label depth="4" name="biomeValue" pos="70,0" width="62" height="20" 
                       font_size="14" color="150,220,150,255" text="{biomename}" 
                       justify="right" font="ReferenceFont" />
            </rect>
            
            <!-- POI Row -->
            <rect name="poiRow" pos="0,-208" width="140" height="20" visible="{showpoi}">
                <label depth="4" pos="8,0" width="60" height="20" 
                       font_size="14" color="180,180,180,255" text="Location" />
                <label depth="4" name="poiValue" pos="70,0" width="62" height="20" 
                       font_size="14" color="200,150,255,255" text="{poiname}" 
                       justify="right" font="ReferenceFont" />
            </rect>
            
            <!-- Coords Row -->
            <rect name="coordsRow" pos="0,-228" width="140" height="20" visible="{showcoords}">
                <label depth="4" pos="8,0" width="60" height="20" 
                       font_size="14" color="180,180,180,255" text="Coords" />
                <label depth="4" name="coordsValue" pos="70,0" width="62" height="20" 
                       font_size="14" color="180,180,180,255" text="{coords}" 
                       justify="right" font="ReferenceFont" />
            </rect>
            
            <!-- Session Time Row (current game session only - game doesn't persist total time) -->
            <rect name="sessionRow" pos="0,-248" width="140" height="20" visible="{showsession}">
                <label depth="4" pos="8,0" width="60" height="20" 
                       font_size="14" color="180,180,180,255" text="Session" />
                <label depth="4" name="sessionValue" pos="70,0" width="62" height="20" 
                       font_size="14" color="100,180,255,255" text="{session}" 
                       justify="right" font="ReferenceFont" />
            </rect>
        </rect>
    </append>

    <!-- Lootstage Change Popup Notification -->
    <append xpath="/windows">
        <window name="hemsoft_lootstage_popup" 
                width="350" height="120" 
                controller="XUiC_HemSoftLootstagePopup, HemSoft_QoL"
                cursor_area="true">
            
            <!-- Center the popup on screen -->
            <panel pos="0,0" width="350" height="120" anchor="CenterCenter" depth="100">
                
                <!-- Semi-transparent dark background with border -->
                <sprite depth="1" name="background" sprite="ui_game_panel_background" 
                        color="20,20,25,240" pos="0,0" width="350" height="120" />
                <sprite depth="2" name="border" sprite="ui_game_panel_header" 
                        color="100,200,100,255" pos="0,0" width="350" height="120" />
                
                <!-- Title bar with gradient background -->
                <sprite depth="3" name="titlebar" sprite="menu_empty" 
                        color="50,120,50,255" pos="5,-5" width="340" height="30" />
                
                <!-- Title text -->
                <label depth="4" pos="10,-8" width="330" height="25" 
                       font_size="20" color="{lootstagecolor}" text="{lootstagemessage}" 
                       justify="center" font="ReferenceFont" style="bold" />
                
                <!-- Lootstage change details -->
                <label depth="4" pos="20,-45" width="310" height="25" 
                       font_size="18" color="200,200,200,255" 
                       text="Better loot will now drop!" 
                       justify="center" font="ReferenceFont" />
                
                <!-- Old and new lootstage display -->
                <rect pos="75,-75" width="200" height="30">
                    <label depth="4" pos="0,0" width="60" height="25" 
                           font_size="16" color="180,180,180,255" text="Lootstage:" 
                           justify="left" />
                    
                    <label depth="4" pos="65,0" width="40" height="25" 
                           font_size="18" color="200,150,100,255" text="{oldlootstage}" 
                           justify="right" font="ReferenceFont" />
                    
                    <label depth="4" pos="105,0" width="30" height="25" 
                           font_size="18" color="150,150,150,255" text="â†’" 
                           justify="center" font="ReferenceFont" />
                    
                    <label depth="4" pos="135,0" width="40" height="25" 
                           font_size="18" color="{lootstagecolor}" text="{newlootstage}" 
                           justify="left" font="ReferenceFont" style="bold" />
                </rect>
            </panel>
        </window>
    </append>
</configs>
