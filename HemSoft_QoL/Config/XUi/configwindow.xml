<?xml version="1.0" encoding="UTF-8"?>
<!-- HemSoft QoL - Configuration Window -->
<configs>
    <!-- Define the configuration window -->
    <append xpath="/windows">
        <window name="HemSoftConfigWindow" controller="HemSoft.QoL.XUiC_HemSoftConfigWindow, HemSoft_QoL">
            <!-- Dark overlay background -->
            <rect name="backgroundOverlay" pos="0,0" width="100%" height="100%" depth="1">
                <sprite name="overlay" sprite="menu_empty" color="0,0,0,180" pos="0,0" width="100%" height="100%" />
            </rect>
            
            <!-- Main dialog panel - centered -->
            <rect name="dialogPanel" pos="-200,180" width="400" height="360" depth="2">
                <!-- Panel background -->
                <sprite name="panelBg" sprite="ui_game_panel_background" color="32,32,40,245" 
                        pos="0,0" width="400" height="360" />
                <sprite name="panelBorder" sprite="ui_game_panel_header" color="80,80,100,255" 
                        pos="0,0" width="400" height="360" />
                
                <!-- Title bar -->
                <sprite name="titleBar" sprite="menu_empty" color="50,50,65,255" 
                        pos="5,-5" width="390" height="32" />
                <label name="titleLabel" pos="10,-8" width="380" height="28"
                       font_size="20" color="255,255,255,255" text="HemSoft QoL Settings"
                       justify="center" font="ReferenceFont" />
                
                <!-- Info Panel Section Header -->
                <label name="infoPanelHeader" pos="15,-50" width="370" height="24"
                       font_size="16" color="200,200,100,255" text="Info Panel Display"
                       font="ReferenceFont" />
                <sprite name="headerLine1" sprite="menu_empty" color="100,100,120,255"
                        pos="15,-72" width="370" height="1" />
                
                <!-- Toggle: Level -->
                <rect name="toggleLevelRow" pos="20,-80" width="360" height="30">
                    <togglebutton name="toggleLevel" pos="0,0" width="30" height="30"
                                  default_value="true" />
                    <label pos="40,-5" width="200" height="24" font_size="14" 
                           color="220,220,220,255" text="Show Level" />
                </rect>
                
                <!-- Toggle: Gamestage -->
                <rect name="toggleGamestageRow" pos="20,-110" width="360" height="30">
                    <togglebutton name="toggleGamestage" pos="0,0" width="30" height="30"
                                  default_value="true" />
                    <label pos="40,-5" width="200" height="24" font_size="14" 
                           color="220,220,220,255" text="Show Gamestage" />
                </rect>
                
                <!-- Toggle: Lootstage -->
                <rect name="toggleLootstageRow" pos="20,-140" width="360" height="30">
                    <togglebutton name="toggleLootstage" pos="0,0" width="30" height="30"
                                  default_value="true" />
                    <label pos="40,-5" width="200" height="24" font_size="14" 
                           color="220,220,220,255" text="Show Lootstage" />
                </rect>
                
                <!-- Toggle: Day -->
                <rect name="toggleDayRow" pos="20,-170" width="360" height="30">
                    <togglebutton name="toggleDay" pos="0,0" width="30" height="30"
                                  default_value="true" />
                    <label pos="40,-5" width="200" height="24" font_size="14" 
                           color="220,220,220,255" text="Show Day" />
                </rect>
                
                <!-- Toggle: Blood Moon -->
                <rect name="toggleBloodMoonRow" pos="20,-200" width="360" height="30">
                    <togglebutton name="toggleBloodMoon" pos="0,0" width="30" height="30"
                                  default_value="true" />
                    <label pos="40,-5" width="200" height="24" font_size="14" 
                           color="220,220,220,255" text="Show Blood Moon Countdown" />
                </rect>
                
                <!-- Toggle: Kills -->
                <rect name="toggleKillsRow" pos="20,-230" width="360" height="30">
                    <togglebutton name="toggleKills" pos="0,0" width="30" height="30"
                                  default_value="true" />
                    <label pos="40,-5" width="200" height="24" font_size="14" 
                           color="220,220,220,255" text="Show Zombie Kills" />
                </rect>
                
                <!-- Hotkeys Section Header -->
                <label name="hotkeysHeader" pos="15,-270" width="370" height="24"
                       font_size="16" color="200,200,100,255" text="Hotkeys"
                       font="ReferenceFont" />
                <sprite name="headerLine2" sprite="menu_empty" color="100,100,120,255"
                        pos="15,-292" width="370" height="1" />
                
                <!-- Hotkey info label -->
                <label name="hotkeyInfo" pos="20,-298" width="360" height="20"
                       font_size="12" color="160,160,160,255" 
                       text="Edit Config/HemSoftQoL.xml to change hotkeys" />
                
                <!-- Buttons row -->
                <rect name="buttonRow" pos="0,-320" width="400" height="40">
                    <!-- Save button -->
                    <simplebutton name="btnSave" pos="80,-5" width="100" height="30"
                                  font_size="16" text="Save" />
                    
                    <!-- Cancel button -->
                    <simplebutton name="btnCancel" pos="220,-5" width="100" height="30"
                                  font_size="16" text="Cancel" />
                </rect>
            </rect>
        </window>
    </append>
</configs>
